<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.enilink.komma</groupId>
	<artifactId>komma-parent</artifactId>
	<version>1.3.4-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<path.to.root>../../..</path.to.root>

		<aopalliance.version>1.0</aopalliance.version>
		<asm.version>7.1</asm.version>
		<commons-collections.version>3.2.2</commons-collections.version>
		<commons-collections4.version>4.2</commons-collections4.version>
		<commons-beanutils.version>1.9.3</commons-beanutils.version>
		<commons-codec.version>1.11</commons-codec.version>
		<commons-io.version>2.4</commons-io.version>
		<commons-lang3.version>3.8.1</commons-lang3.version>
		<commons-text.version>1.3</commons-text.version>
		<guava.version>25.1-jre</guava.version>
		<guice.version>4.2.2</guice.version>
		<httpclient.version>4.5.6</httpclient.version>
		<httpcore.version>4.4.10</httpcore.version>
		<javax.inject.version>1</javax.inject.version>
		<jackson.version>2.9.8</jackson.version>
		<jsonld.version>0.12.3</jsonld.version>
		<logback.version>1.2.3</logback.version>
		<mapdb.version>1.0.8</mapdb.version>
		<opencsv.version>4.3.2</opencsv.version>
		<parboiled.version>1.3.1</parboiled.version>
		<rdf4j.version>2.5.0</rdf4j.version>
		<slf4j.version>1.7.26</slf4j.version>
	</properties>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.5.1</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.10.3</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>3.1.1</version>
					<configuration>
						<archive>
							<manifestFile>META-INF/MANIFEST.MF</manifestFile>
						</archive>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>test-jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>.keep</exclude>
				</excludes>
			</resource>

			<resource>
				<directory>.</directory>
				<includes>
					<include>META-INF/*</include>
					<include>OSGI-INF/*</include>
					<include>icons/*</include>
					<include>schema/*.exsd</include>
					<include>about.html</include>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
				</includes>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>doclint-java8-disable</id>
			<activation>
				<jdk>[1.8,)</jdk>
			</activation>
			<properties>
				<javadoc.opts>-Xdoclint:none</javadoc.opts>
			</properties>
		</profile>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-source-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<!-- plugin> <artifactId>maven-javadoc-plugin</artifactId> <version>2.10.3</version> 
						<executions> <execution> <id>attach-javadocs</id> <goals> <goal>jar</goal> 
						</goals> <configuration> <additionalparam>${javadoc.opts}</additionalparam> 
						</configuration> </execution> </executions> </plugin -->
				</plugins>
			</build>
		</profile>
	</profiles>

	<modules>
		<module>releng/komma-updatesite</module>
	</modules>
</project>
